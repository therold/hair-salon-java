<form action="/clients/edit" method="post">
  <input id="clientId" name="clientId" value="$client.getId()" hidden>
  <div class="form-group">
    <label for="name">Name:</label>
    <input id="name" name="name" class="form-control" type="text" value="$client.getName()" required>
  </div>
  <button class="btn btn-success" type="submit">Update account</button>
</form>
